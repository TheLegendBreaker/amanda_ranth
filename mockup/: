// nav menu
nav.nav{
	ol {
		counter-reset: count;
		li {
			&:active{
				filter: invert(100%);
				transform: scale(.98);
			}
			&.numberd{
				counter-increment: count;
				&:before{
					content: counter(count);
					background: black;
					color: white;
					font-family: Times Roman, Serif, Times;
					border-radius: 50%;
					width: 15px;
					height: 15px;
					position: relative;
					display: block;
					text-align: center;
					font-size: 12px;
					bottom: 5px;
					right: 15px;
				}
			}
			a {
				display: block;
				padding: 5px 15px;
				width: 100%;
				height: 100%;
				letter-spacing: 2px;
				transition: all .2s ease;
				&:hover{
					font-family: Serif, Times Roman, Times;
					color: white;
					background: black;
				}
				&:active{
					filter: invert(100%);
					transform: scale(.98);
				}
			}
			ul.submenu{
				// hide it and take it out of doc flow
				position: absolute;
				z-index: -1;
				opacity: 0;
				width: 200px;
				background: #333;
				height: 0;
				transition: all .6s ease;
				// once displayed hovering submenu will keep it displayed
				&:hover{
					opacity: 1;
					z-index: 1;
					height: min-content;
				}
				&:focus{
					opacity: 1;
					z-index: 1;
					height: min-content;
				}
				a{
					padding: 10px 5px;
					color: white;
					&:hover{
						background: #333;
					}
				}
			}
			&.show{
				a{
					font-family: Serif, Times Roman, Times;
					color: white;
					background: black;
				}
				&>a {
					&:hover + ul.submenu{ // pure css submenu - li parent of link and submenu can use adjacent sibling selector '+'. 
						// the '>' makes it so only the direct children of the hoverd element effect each other. 
						opacity: 1;
						z-index: 1;
						height: min-content;
					}
					&:focus + ul.submenu{ // allow submenues to be tab-able
						opacity: 1;
						z-index: 1;
						height: min-content;
					}
				}
			}// end submenu
		}// end li
	}// end ol
}
// end nav

